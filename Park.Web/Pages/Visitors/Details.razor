@page "/visitors/{Id:int}"
@using Park.Web.Models
@using Park.Web.Services
@inject IVisitorService VisitorService
@inject NavigationManager Navigation
@inject ILogger<Details> Logger

<AuthorizeView>
    <ChildContent>
        <div class="container-fluid">
            @if (isLoading)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                    <p class="mt-2">Cargando información del visitante...</p>
                </div>
            }
            else if (visitor == null)
            {
                <div class="text-center py-5">
                    <i class="fas fa-exclamation-triangle fa-3x text-warning mb-3"></i>
                    <h4>Visitante no encontrado</h4>
                    <p class="text-muted">El visitante que buscas no existe o ha sido eliminado.</p>
                    <button class="btn btn-primary" @onclick="@(() => Navigation.NavigateTo("/visitors"))">
                        <i class="fas fa-arrow-left me-2"></i>
                        Volver a Visitantes
                    </button>
                </div>
            }
            else
            {
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h1 class="h3 mb-0">
                            <i class="fas fa-user me-2"></i>
                            @visitor.FirstName @visitor.LastName
                        </h1>
                        <p class="text-muted">Detalles del visitante</p>
                    </div>
                    <div class="btn-group">
                        <button class="btn btn-outline-warning" @onclick="@(() => Navigation.NavigateTo($"/visitors/{visitor.Id}/edit"))">
                            <i class="fas fa-edit me-2"></i>
                            Editar
                        </button>
                        <button class="btn btn-outline-secondary" @onclick="@(() => Navigation.NavigateTo("/visitors"))">
                            <i class="fas fa-arrow-left me-2"></i>
                            Volver
                        </button>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-8">
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="mb-0">Información Personal</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">Nombre Completo</label>
                                        <p class="form-control-plaintext">@visitor.FirstName @visitor.LastName</p>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">Estado</label>
                                        <div>
                                            @if (visitor.IsActive)
                                            {
                                                <span class="badge bg-success">Activo</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Inactivo</span>
                                            }
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">Documento</label>
                                        <p class="form-control-plaintext">
                                            <strong>@visitor.DocumentType:</strong> @visitor.DocumentNumber
                                        </p>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">Nacionalidad</label>
                                        <p class="form-control-plaintext">
                                            @if (!string.IsNullOrEmpty(visitor.Nationality))
                                            {
                                                @visitor.Nationality
                                            }
                                            else
                                            {
                                                <span class="text-muted">No especificada</span>
                                            }
                                        </p>
                                    </div>
                                </div>

                                @if (visitor.BirthDate.HasValue)
                                {
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Fecha de Nacimiento</label>
                                        <p class="form-control-plaintext">@visitor.BirthDate.Value.ToString("dd/MM/yyyy")</p>
                                    </div>
                                }

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">Teléfono</label>
                                        <p class="form-control-plaintext">
                                            @if (!string.IsNullOrEmpty(visitor.Phone))
                                            {
                                                <i class="fas fa-phone me-1"></i>@visitor.Phone
                                            }
                                            else
                                            {
                                                <span class="text-muted">No especificado</span>
                                            }
                                        </p>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">Email</label>
                                        <p class="form-control-plaintext">
                                            @if (!string.IsNullOrEmpty(visitor.Email))
                                            {
                                                <i class="fas fa-envelope me-1"></i>@visitor.Email
                                            }
                                            else
                                            {
                                                <span class="text-muted">No especificado</span>
                                            }
                                        </p>
                                    </div>
                                </div>

                                @if (!string.IsNullOrEmpty(visitor.Company))
                                {
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Empresa</label>
                                        <p class="form-control-plaintext">
                                            <i class="fas fa-building me-1"></i>@visitor.Company
                                        </p>
                                    </div>
                                }

                                @if (!string.IsNullOrEmpty(visitor.Address))
                                {
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Dirección</label>
                                        <p class="form-control-plaintext">
                                            <i class="fas fa-map-marker-alt me-1"></i>@visitor.Address
                                        </p>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="mb-0">Historial de Visitas</h5>
                            </div>
                            <div class="card-body">
                                @if (visitor.VisitsCount > 0)
                                {
                                    <div class="alert alert-info">
                                        <i class="fas fa-info-circle me-2"></i>
                                        Este visitante ha realizado <strong>@visitor.VisitsCount visitas</strong> al parque.
                                    </div>
                                    <button class="btn btn-outline-primary" @onclick="@(() => Navigation.NavigateTo($"/visitors/{visitor.Id}/visits"))">
                                        <i class="fas fa-history me-2"></i>
                                        Ver Historial
                                    </button>
                                }
                                else
                                {
                                    <div class="text-center py-3">
                                        <i class="fas fa-calendar-times fa-2x text-muted mb-2"></i>
                                        <p class="text-muted">No hay visitas registradas para este visitante.</p>
                                        <button class="btn btn-outline-primary" @onclick="@(() => Navigation.NavigateTo("/visits/create"))">
                                            <i class="fas fa-plus me-2"></i>
                                            Crear Visita
                                        </button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="card mb-4">
                            <div class="card-header">
                                <h6 class="mb-0">Estadísticas</h6>
                            </div>
                            <div class="card-body">
                                <div class="row text-center">
                                    <div class="col-6">
                                        <div class="border-end">
                                            <h4 class="text-primary mb-1">@visitor.VisitsCount</h4>
                                            <small class="text-muted">Visitas</small>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <h4 class="text-success mb-1">@visitor.CreatedAt.ToString("dd/MM/yyyy")</h4>
                                        <small class="text-muted">Registrado</small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card mb-4">
                            <div class="card-header">
                                <h6 class="mb-0">Acciones Rápidas</h6>
                            </div>
                            <div class="card-body">
                                <div class="d-grid gap-2">
                                    <button class="btn btn-outline-primary btn-sm" @onclick="@(() => Navigation.NavigateTo("/visits/create"))">
                                        <i class="fas fa-calendar-plus me-2"></i>
                                        Nueva Visita
                                    </button>
                                    <button class="btn btn-outline-success btn-sm" @onclick="@(() => Navigation.NavigateTo("/qr-reader"))">
                                        <i class="fas fa-qrcode me-2"></i>
                                        Lector QR
                                    </button>
                                    <button class="btn btn-outline-info btn-sm" @onclick="@(() => Navigation.NavigateTo("/visits"))">
                                        <i class="fas fa-list me-2"></i>
                                        Ver Visitas
                                    </button>
                                </div>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-header">
                                <h6 class="mb-0">Información del Sistema</h6>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">ID de Visitante</label>
                                    <p class="form-control-plaintext">@visitor.Id</p>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Fecha de Registro</label>
                                    <p class="form-control-plaintext">@visitor.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                                </div>
                                @if (visitor.UpdatedAt.HasValue)
                                {
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Última Actualización</label>
                                        <p class="form-control-plaintext">@visitor.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm")</p>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </ChildContent>
    <NotAuthorized>
        <div class="text-center">
            <h3>Acceso Denegado</h3>
            <p>Debes iniciar sesión para ver los detalles del visitante.</p>
            <a href="/login" class="btn btn-primary">Iniciar Sesión</a>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    [Parameter]
    public int Id { get; set; }

    private Visitor? visitor;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadVisitor();
    }

    private async Task LoadVisitor()
    {
        try
        {
            isLoading = true;
            visitor = await VisitorService.GetByIdAsync(Id);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error al cargar visitante {VisitorId}", Id);
            visitor = null;
        }
        finally
        {
            isLoading = false;
        }
    }
}
