@page "/gates"
@using Park.Web.Models
@using Park.Web.Services
@inject IGateService GateService
@inject NavigationManager Navigation
@inject ILogger<Index> Logger

<AuthorizeView>
    <ChildContent>
        <div class="container-fluid">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h3 mb-0">
                        <i class="fas fa-door-open me-2"></i>
                        Gestión de Puertas
                    </h1>
                    <p class="text-muted">Administra las puertas de acceso del parque industrial</p>
                </div>
                <button class="btn btn-primary" @onclick="@(() => Navigation.NavigateTo("/gates/create"))">
                    <i class="fas fa-plus me-2"></i>
                    Nueva Puerta
                </button>
            </div>

            @if (isLoading)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                    <p class="mt-2">Cargando puertas...</p>
                </div>
            }
            else if (gates == null || !gates.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-door-open fa-3x text-muted mb-3"></i>
                    <h4>No hay puertas registradas</h4>
                    <p class="text-muted">Comienza agregando la primera puerta de acceso al parque industrial.</p>
                    <button class="btn btn-primary" @onclick="@(() => Navigation.NavigateTo("/gates/create"))">
                        <i class="fas fa-plus me-2"></i>
                        Agregar Puerta
                    </button>
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-header">
                        <div class="row align-items-center">
                            <div class="col">
                                <h5 class="mb-0">Puertas (@gates.Count())</h5>
                            </div>
                            <div class="col-auto">
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-search"></i>
                                    </span>
                                    <input type="text" class="form-control" placeholder="Buscar puertas..." 
                                           @bind="searchTerm" @bind:event="oninput" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Puerta</th>
                                        <th>Zona</th>
                                        <th>Tipo</th>
                                        <th>Estado</th>
                                        <th>Último Acceso</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var gate in filteredGates)
                                    {
                                        <tr>
                                            <td>
                                                <div>
                                                    <strong>@gate.Name</strong>
                                                    @if (!string.IsNullOrEmpty(gate.Description))
                                                    {
                                                        <br />
                                                        <small class="text-muted">@gate.Description</small>
                                                    }
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@(gate.Zone?.Name ?? "Sin zona")</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@gate.GateType</span>
                                            </td>
                                            <td>
                                                @if (gate.IsActive)
                                                {
                                                    <span class="badge bg-success">Activa</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Inactiva</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">@gate.GateNumber</span>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <button class="btn btn-sm btn-outline-primary" 
                                                            @onclick="@(() => Navigation.NavigateTo($"/gates/{gate.Id}"))"
                                                            title="Ver detalles">
                                                        <i class="fas fa-eye"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-warning" 
                                                            @onclick="@(() => Navigation.NavigateTo($"/gates/edit/{gate.Id}"))"
                                                            title="Editar">
                                                        <i class="fas fa-edit"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-danger" 
                                                            @onclick="() => DeleteGate(gate)"
                                                            title="Eliminar">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>
    </ChildContent>
    <NotAuthorized>
        <div class="text-center">
            <h3>Acceso Denegado</h3>
            <p>Debes iniciar sesión para acceder a la gestión de puertas.</p>
            <a href="/login" class="btn btn-primary">Iniciar Sesión</a>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    private List<Gate>? gates;
    private bool isLoading = true;
    private string searchTerm = string.Empty;

    private IEnumerable<Gate> filteredGates => gates?
        .Where(g => string.IsNullOrEmpty(searchTerm) || 
                   g.Name.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                   g.Description.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
                   (g.Zone?.Name?.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ?? false))
        .OrderBy(g => g.Name) ?? Enumerable.Empty<Gate>();

    protected override async Task OnInitializedAsync()
    {
        await LoadGates();
    }

    private async Task LoadGates()
    {
        try
        {
            isLoading = true;
            var result = await GateService.GetAllAsync();
            gates = result?.ToList() ?? new List<Gate>();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error al cargar puertas");
            gates = new List<Gate>();
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task DeleteGate(Gate gate)
    {
        // TODO: Implementar confirmación de eliminación
        try
        {
            var success = await GateService.DeleteAsync(gate.Id);
            if (success)
            {
                await LoadGates();
                // TODO: Mostrar mensaje de éxito
            }
            else
            {
                // TODO: Mostrar mensaje de error
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error al eliminar puerta {GateId}", gate.Id);
            // TODO: Mostrar mensaje de error
        }
    }
}
