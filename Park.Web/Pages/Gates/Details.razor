@page "/gates/{Id:int}"
@using Park.Web.Models
@using Park.Web.Services
@inject IGateService GateService
@inject NavigationManager Navigation
@inject ILogger<Details> Logger

<AuthorizeView>
    <ChildContent>
        <div class="container-fluid">
            @if (isLoading)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                    <p class="mt-2">Cargando información de la puerta...</p>
                </div>
            }
            else if (gate == null)
            {
                <div class="text-center py-5">
                    <i class="fas fa-exclamation-triangle fa-3x text-warning mb-3"></i>
                    <h4>Puerta no encontrada</h4>
                    <p class="text-muted">La puerta que buscas no existe o ha sido eliminada.</p>
                    <button class="btn btn-primary" @onclick="@(() => Navigation.NavigateTo("/gates"))">
                        <i class="fas fa-arrow-left me-2"></i>
                        Volver a Puertas
                    </button>
                </div>
            }
            else
            {
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h1 class="h3 mb-0">
                            <i class="fas fa-door-open me-2"></i>
                            @gate.Name
                        </h1>
                        <p class="text-muted">Detalles de la puerta de acceso</p>
                    </div>
                    <div class="btn-group">
                        <button class="btn btn-outline-warning" @onclick="@(() => Navigation.NavigateTo($"/gates/{gate.Id}/edit"))">
                            <i class="fas fa-edit me-2"></i>
                            Editar
                        </button>
                        <button class="btn btn-outline-secondary" @onclick="@(() => Navigation.NavigateTo("/gates"))">
                            <i class="fas fa-arrow-left me-2"></i>
                            Volver
                        </button>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-8">
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="mb-0">Información General</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">Nombre</label>
                                        <p class="form-control-plaintext">@gate.Name</p>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">Estado</label>
                                        <div>
                                            @if (gate.IsActive)
                                            {
                                                <span class="badge bg-success">Activa</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Inactiva</span>
                                            }
                                        </div>
                                    </div>
                                </div>

                                @if (!string.IsNullOrEmpty(gate.Description))
                                {
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Descripción</label>
                                        <p class="form-control-plaintext">@gate.Description</p>
                                    </div>
                                }

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">Tipo de Puerta</label>
                                        <div>
                                            <span class="badge bg-info">
                                                <i class="fas fa-door-open me-1"></i>@gate.GateType
                                            </span>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">Número de Puerta</label>
                                        <p class="form-control-plaintext">
                                            @if (!string.IsNullOrEmpty(gate.GateNumber))
                                            {
                                                <code>@gate.GateNumber</code>
                                            }
                                            else
                                            {
                                                <span class="text-muted">No especificado</span>
                                            }
                                        </p>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label fw-bold">Descripción</label>
                                    <p class="form-control-plaintext">
                                        @if (!string.IsNullOrEmpty(gate.Description))
                                        {
                                            <i class="fas fa-info-circle me-1"></i>@gate.Description
                                        }
                                        else
                                        {
                                            <span class="text-muted">No especificada</span>
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="mb-0">Zona Asignada</h5>
                            </div>
                            <div class="card-body">
                                <div class="d-flex align-items-center mb-3">
                                    <div class="flex-shrink-0">
                                        <i class="fas fa-map-marker-alt fa-2x text-primary"></i>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h6 class="mb-1">@(gate.Zone?.Name ?? "Sin zona")</h6>
                                        <p class="text-muted mb-0">@(gate.Zone?.Description ?? "Sin descripción")</p>
                                    </div>
                                </div>
                                <button class="btn btn-outline-primary btn-sm" @onclick="@(() => Navigation.NavigateTo($"/zones/{gate.Zone?.Id}"))" disabled="@(gate.Zone == null)">
                                    <i class="fas fa-eye me-2"></i>
                                    Ver Zona
                                </button>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">Actividad Reciente</h5>
                            </div>
                            <div class="card-body">
                                <div class="text-center py-3">
                                    <i class="fas fa-clock fa-2x text-muted mb-2"></i>
                                    <p class="text-muted">Información de actividad disponible próximamente.</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="card mb-4">
                            <div class="card-header">
                                <h6 class="mb-0">Estadísticas</h6>
                            </div>
                            <div class="card-body">
                                <div class="row text-center">
                                    <div class="col-6">
                                        <div class="border-end">
                                            <h4 class="text-primary mb-1">-</h4>
                                            <small class="text-muted">Accesos</small>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <h4 class="text-success mb-1">@(gate.Zone?.GatesCount ?? 0)</h4>
                                        <small class="text-muted">Puertas en Zona</small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card mb-4">
                            <div class="card-header">
                                <h6 class="mb-0">Acciones Rápidas</h6>
                            </div>
                            <div class="card-body">
                                <div class="d-grid gap-2">
                                    <button class="btn btn-outline-primary btn-sm" @onclick="@(() => Navigation.NavigateTo("/visits/create"))">
                                        <i class="fas fa-calendar-plus me-2"></i>
                                        Nueva Visita
                                    </button>
                                    <button class="btn btn-outline-success btn-sm" @onclick="@(() => Navigation.NavigateTo("/qr-reader"))">
                                        <i class="fas fa-qrcode me-2"></i>
                                        Lector QR
                                    </button>
                                    <button class="btn btn-outline-info btn-sm" @onclick="@(() => Navigation.NavigateTo("/visits"))">
                                        <i class="fas fa-list me-2"></i>
                                        Ver Visitas
                                    </button>
                                </div>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-header">
                                <h6 class="mb-0">Información del Sistema</h6>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">ID de Puerta</label>
                                    <p class="form-control-plaintext">@gate.Id</p>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Fecha de Creación</label>
                                    <p class="form-control-plaintext">@gate.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                                </div>
                                @if (gate.UpdatedAt.HasValue)
                                {
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Última Actualización</label>
                                        <p class="form-control-plaintext">@gate.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm")</p>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </ChildContent>
    <NotAuthorized>
        <div class="text-center">
            <h3>Acceso Denegado</h3>
            <p>Debes iniciar sesión para ver los detalles de la puerta.</p>
            <a href="/login" class="btn btn-primary">Iniciar Sesión</a>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    [Parameter]
    public int Id { get; set; }

    private Gate? gate;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadGate();
    }

    private async Task LoadGate()
    {
        try
        {
            isLoading = true;
            gate = await GateService.GetByIdAsync(Id);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error al cargar puerta {GateId}", Id);
            gate = null;
        }
        finally
        {
            isLoading = false;
        }
    }
}
