@page "/companies/{Id:int}"
@using Park.Web.Models
@using Park.Web.Services
@inject ICompanyService CompanyService
@inject NavigationManager Navigation
@inject ILogger<Details> Logger

<AuthorizeView>
    <ChildContent>
        <div class="container-fluid">
            @if (isLoading)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                    <p class="mt-2">Cargando información de la empresa...</p>
                </div>
            }
            else if (company == null)
            {
                <div class="text-center py-5">
                    <i class="fas fa-exclamation-triangle fa-3x text-warning mb-3"></i>
                    <h4>Empresa no encontrada</h4>
                    <p class="text-muted">La empresa que buscas no existe o ha sido eliminada.</p>
                    <button class="btn btn-primary" @onclick="@(() => Navigation.NavigateTo("/companies"))">
                        <i class="fas fa-arrow-left me-2"></i>
                        Volver a Empresas
                    </button>
                </div>
            }
            else
            {
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h1 class="h3 mb-0">
                            <i class="fas fa-building me-2"></i>
                            @company.Name
                        </h1>
                        <p class="text-muted">Detalles de la empresa</p>
                    </div>
                    <div class="btn-group">
                        <button class="btn btn-outline-warning" @onclick="@(() => Navigation.NavigateTo($"/companies/{company.Id}/edit"))">
                            <i class="fas fa-edit me-2"></i>
                            Editar
                        </button>
                        <button class="btn btn-outline-secondary" @onclick="@(() => Navigation.NavigateTo("/companies"))">
                            <i class="fas fa-arrow-left me-2"></i>
                            Volver
                        </button>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-8">
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="mb-0">Información General</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">Nombre</label>
                                        <p class="form-control-plaintext">@company.Name</p>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">Estado</label>
                                        <div>
                                            @if (company.IsActive)
                                            {
                                                <span class="badge bg-success">Activa</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Inactiva</span>
                                            }
                                        </div>
                                    </div>
                                </div>

                                @if (!string.IsNullOrEmpty(company.Description))
                                {
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Descripción</label>
                                        <p class="form-control-plaintext">@company.Description</p>
                                    </div>
                                }

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">Dirección</label>
                                        <p class="form-control-plaintext">
                                            @if (!string.IsNullOrEmpty(company.Address))
                                            {
                                                @company.Address
                                            }
                                            else
                                            {
                                                <span class="text-muted">No especificada</span>
                                            }
                                        </p>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">Teléfono</label>
                                        <p class="form-control-plaintext">
                                            @if (!string.IsNullOrEmpty(company.Phone))
                                            {
                                                <i class="fas fa-phone me-1"></i>@company.Phone
                                            }
                                            else
                                            {
                                                <span class="text-muted">No especificado</span>
                                            }
                                        </p>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label fw-bold">Email</label>
                                    <p class="form-control-plaintext">
                                        @if (!string.IsNullOrEmpty(company.Email))
                                        {
                                            <i class="fas fa-envelope me-1"></i>@company.Email
                                        }
                                        else
                                        {
                                            <span class="text-muted">No especificado</span>
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="mb-0">Información de Contacto</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">Persona de Contacto</label>
                                        <p class="form-control-plaintext">
                                            @if (!string.IsNullOrEmpty(company.ContactPerson))
                                            {
                                                <i class="fas fa-user me-1"></i>@company.ContactPerson
                                            }
                                            else
                                            {
                                                <span class="text-muted">No especificada</span>
                                            }
                                        </p>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">Teléfono de Contacto</label>
                                        <p class="form-control-plaintext">
                                            @if (!string.IsNullOrEmpty(company.ContactPhone))
                                            {
                                                <i class="fas fa-phone me-1"></i>@company.ContactPhone
                                            }
                                            else
                                            {
                                                <span class="text-muted">No especificado</span>
                                            }
                                        </p>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label fw-bold">Email de Contacto</label>
                                    <p class="form-control-plaintext">
                                        @if (!string.IsNullOrEmpty(company.ContactEmail))
                                        {
                                            <i class="fas fa-envelope me-1"></i>@company.ContactEmail
                                        }
                                        else
                                        {
                                            <span class="text-muted">No especificado</span>
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="card mb-4">
                            <div class="card-header">
                                <h6 class="mb-0">Zona Asignada</h6>
                            </div>
                            <div class="card-body">
                                <div class="d-flex align-items-center mb-3">
                                    <div class="flex-shrink-0">
                                        <i class="fas fa-map-marker-alt fa-2x text-primary"></i>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h6 class="mb-1">@company.Zone.Name</h6>
                                        <p class="text-muted mb-0">@company.Zone.Description</p>
                                    </div>
                                </div>
                                <button class="btn btn-outline-primary btn-sm w-100" @onclick="@(() => Navigation.NavigateTo($"/zones/{company.Zone.Id}"))">
                                    <i class="fas fa-eye me-2"></i>
                                    Ver Zona
                                </button>
                            </div>
                        </div>

                        <div class="card mb-4">
                            <div class="card-header">
                                <h6 class="mb-0">Estadísticas</h6>
                            </div>
                            <div class="card-body">
                                <div class="row text-center">
                                    <div class="col-6">
                                        <div class="border-end">
                                            <h4 class="text-primary mb-1">@company.VisitsCount</h4>
                                            <small class="text-muted">Visitas</small>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <h4 class="text-success mb-1">@company.Zone.CompaniesCount</h4>
                                        <small class="text-muted">Empresas en Zona</small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-header">
                                <h6 class="mb-0">Información del Sistema</h6>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">ID de Empresa</label>
                                    <p class="form-control-plaintext">@company.Id</p>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Fecha de Creación</label>
                                    <p class="form-control-plaintext">@company.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </ChildContent>
    <NotAuthorized>
        <div class="text-center">
            <h3>Acceso Denegado</h3>
            <p>Debes iniciar sesión para ver los detalles de la empresa.</p>
            <a href="/login" class="btn btn-primary">Iniciar Sesión</a>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    [Parameter]
    public int Id { get; set; }

    private Company? company;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadCompany();
    }

    private async Task LoadCompany()
    {
        try
        {
            isLoading = true;
            company = await CompanyService.GetByIdAsync(Id);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error al cargar empresa {CompanyId}", Id);
            company = null;
        }
        finally
        {
            isLoading = false;
        }
    }
}
